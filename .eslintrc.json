{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "never"],
        "global-require": ["off"],
        "indent": ["error", 4],
        "no-restricted-syntax": ["error", "FunctionExpression", "WithStatement", "BinaryExpression[operator='in']"],
        "import/extensions": ["error", "always", {"ignorePackages": true} ],
        "linebreak-style": [0, "unix"]
    }
}
